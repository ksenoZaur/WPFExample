<Window x:Class="WpfApplication1.DialogWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:local="clr-namespace:WpfApplication1"
        mc:Ignorable="d"
        Title="DialogWindow" Height="450" Width="800">
    <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
        <StackPanel.Resources>
            <Style TargetType="Button">
                <Setter Property="Margin" Value="0,0,0,10"></Setter>
            </Style>
        </StackPanel.Resources>
        <Button Name="btn1" Click="btn1_click">btn 1</Button>
        <Button Name="btn2" Click="btn2_click">btn 2</Button>
        <Button Name="btn3" Click="btn3_click">btn 3</Button>
        <Button Name="btn4" Click="btn4_click">btn 4</Button>
        <Button Name="btn5" Click="btn5_click">btn 5</Button>
        <Button Name="btn6" Click="btn6_click">btn 6</Button>
        
    </StackPanel>
</Window>
