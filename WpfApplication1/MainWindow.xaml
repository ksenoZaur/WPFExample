<Window x:Class="WpfApplication1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApplication1"
        mc:Ignorable="d"
        Title="MainWindow" Height="500" Width="780">
        <DockPanel Margin="10">
                <DockPanel DockPanel.Dock="Top">
                        <Button Name="syncButton" Click="DoSync" DockPanel.Dock="Left" HorizontalAlignment="Left">Sync</Button>
                        <Button Name="asyncButton" Click="DoAsync" DockPanel.Dock="Right" HorizontalAlignment="Right">Async</Button>
                </DockPanel>
                <ProgressBar DockPanel.Dock="Bottom" Height="18" Name="progBar" />
                <ListBox Name="lbResults" Margin="0,10" />
        </DockPanel>
</Window>
